// Tslint.json is the configuration file for the typescript linter
// and it helps us keep a consistent coding style.
// This linter doesn't cover everything, some things are enforced 
// by Prettier.
{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "interface-name": false,
        "semicolon": [
            true,
            "always"
        ],
        "member-access": [
            false
        ],
        "ordered-imports": [
            false
        ],
        "no-console": [
            false
        ],
        "no-var-requires": true,
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "no-redundant-jsdoc": true,
        "no-implicit-dependencies": false,
        "jsx-no-lambda": false,
        "object-literal-sort-keys": false,
        "jsx-boolean-value": false
    },
    "rulesDirectory": []
}